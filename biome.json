{
  "$schema": "https://biomejs.dev/schemas/1.0.0/schema.json",
  "extends": ["./packages/linter/biome.json"],
  "organizeImports": {
    "enabled": false
  },
  "files": {
    "ignore": ["dist/*", "tmp/*", ".cache/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noEmptyInterface": "warn",
        "noControlCharactersInRegex": "off",
        "noAssignInExpressions": "off",
        "noArrayIndexKey": "warn"
      },
      "style": {
        "noParameterAssign": "off",
        "useLiteralEnumMembers": "off"
      },
      "performance": {
        "noDelete": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingComma": "es5",
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "jsxQuoteStyle": "single"
    }
  }
}
